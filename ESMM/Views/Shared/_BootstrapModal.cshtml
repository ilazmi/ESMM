@model BootstrapModal
@{ 
    var partialModel = new { id = Model.Id };
}
<!-- Modal -->
<div class="modal fade" id="@Model.Id" tabindex="-1" role="dialog" aria-labelledby="@Model.AreaLabeledId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered @Model.ModalSizeClass" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                @if (Model.Buttons == ModalButton.OkCancel || Model.Buttons == ModalButton.YesNo || Model.Buttons == ModalButton.YesNoCancel || Model.Buttons == ModalButton.SaveCancel || Model.Buttons == ModalButton.Custom)
                {
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Model.ButtonSecondTitle</button>
                }
            <button type="button" class="btn btn-primary">@Model.ButtonFirstTitle</button>
            </div>
        </div>
    </div>
</div>